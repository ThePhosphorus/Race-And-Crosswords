{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "start",
      "type": "shell",
      "command":
        "npm start --silent --prefix ./server/ & npm start --prefix ./client/ ",
      "problemMatcher": ["$tsc-watch"],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "client",
      "type": "shell",
      "command": "npm start --prefix ./client/",
      "problemMatcher": ["$tsc"],
      "group": "build"
    },
    {
      "label": "server",
      "type": "shell",
      "command": "npm start --prefix ./server/",
      "group": "build"
    }
  ]
}
