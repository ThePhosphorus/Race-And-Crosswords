{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "start",
            "type": "shell",
            "command": "npm start --silent --prefix ./server/ & npm start --prefix ./client/ ",
            "problemMatcher": [
                "$tsc-watch"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "serve",
            "type": "shell",
            "command": "npm start --prefix ./client/",
            "problemMatcher": [
                "$tsc"
            ]
        },
        {
            "label": "server",
            "type": "shell",
            "command": "npm start --prefix ./server/"
        }
    ]
}